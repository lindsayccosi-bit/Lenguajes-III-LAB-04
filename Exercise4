import java.util.NoSuchElementException;

class RegistroEstudiantes {
    private String[] estudiantes; // arreglo fijo
    private int contador; // cuenta la cantidad de estudiantes que hay realmente

    public RegistroEstudiantes(int capacidad) {
        estudiantes = new String[capacidad];
        contador = 0;
    }

    // Método para agregar estudiante
    public void agregarEstudiante(String nombre) {
        if (nombre == null || nombre.trim().isEmpty()) {
            throw new IllegalArgumentException("El nombre no puede ser nulo o vacío.");
        }
        if (contador >= estudiantes.length) {
            throw new IllegalStateException("No hay espacio para más estudiantes.");
        }
        estudiantes[contador++] = nombre;
    }

    // Método para buscar estudiante
    public String buscarEstudiante(String nombre) {
        for (int i = 0; i < contador; i++) {
            if (estudiantes[i].equalsIgnoreCase(nombre)) {
                return estudiantes[i];
            }
        }
        throw new NoSuchElementException("El estudiante '" + nombre + "' no se encuentra en el registro.");
    }

    // Mostrar todos los estudiantes
    public void mostrarEstudiantes() {
        System.out.println("Lista de estudiantes:");
        for (int i = 0; i < contador; i++) {
            System.out.println("- " + estudiantes[i]);
        }
    }
}


// Clase principal
public class Main {
    public static void main(String[] args) {
        RegistroEstudiantes registro = new RegistroEstudiantes(3);

        try {
            registro.agregarEstudiante("Ana");
            registro.agregarEstudiante("Pedro");
            registro.agregarEstudiante(""); // Esto lanzará IllegalArgumentException
        } catch (IllegalArgumentException e) {
            System.out.println("Error al agregar: " + e.getMessage());
        }

        try {
            System.out.println("Buscando estudiante 'Luis'...");
            String encontrado = registro.buscarEstudiante("Luis"); // lanzará NoSuchElementException
            System.out.println("Encontrado: " + encontrado);
        } catch (NoSuchElementException e) {
            System.out.println("Error en búsqueda: " + e.getMessage());
        }

        registro.mostrarEstudiantes();
    }
}

